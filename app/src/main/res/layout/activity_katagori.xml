<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient_primary"
    tools:context=".input.KatagoriActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/mblack"
        android:text="Pilih Kategori"
        android:textColor="#fff"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/k_besi"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/kt_besi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/k_kardus"
        app:layout_constraintTop_toBottomOf="@+id/k_botolplastik" />

    <ImageView
        android:id="@+id/k_kaca"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/kt_btl_kaca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/k_botolplastik"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/k_kardus"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/kt_kardus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/k_botolplastik" />

    <ImageView
        android:id="@+id/k_botolplastik"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/kt_btl_plastik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>