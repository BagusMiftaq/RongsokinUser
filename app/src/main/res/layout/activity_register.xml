<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAct">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="252dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_blue_gradient_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="353dp"
        android:background="@drawable/bg_white_corner"
        android:orientation="vertical"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/nav_user_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_icon_material_account_circle"
            android:layout_marginStart="98dp"
            android:layout_marginTop="32dp" />




        <EditText
            android:id="@+id/regName"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:textSize="13sp"/>

    <EditText
        android:id="@+id/regMail"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="13sp"/>

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:textSize="13sp"/>

    <EditText
        android:id="@+id/regPassword2"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:hint="Ulang Kata Sandi"
        android:inputType="textPassword"
        android:textSize="13sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/regBtn"
        android:layout_width="270dp"
        android:layout_height="34dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_blue_primary"
        android:fontFamily="@font/mbold"
        android:text="DAFTAR"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Punya Akun ?, Silahkan"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regBtn"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/btnMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:text="Masuk"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/regBtn"
        app:layout_constraintVertical_bias="0.088" />

    <ProgressBar
        android:id="@+id/regProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/regBtn"
        app:layout_constraintEnd_toEndOf="@+id/regBtn"
        app:layout_constraintStart_toStartOf="@+id/regBtn"
        app:layout_constraintTop_toTopOf="@+id/regBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/mbold"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>